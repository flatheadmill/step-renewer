#!/usr/bin/env zsh

source "${0:a:h}/step-renewer.zsh"
source "${0:a:h}/config.zsh"

function {
    typeset config_map_name
    if [[ ${1:-} = '--config' ]]; then
        config
        false && quotedoc <<'        EOF'
            configVersion: v1
            schedule:
            - crontab: "* * * * *"
              group: certificates
            kubernetes:
            - apiVersion: v1
              kind: Secret
              labelSelector:
                matchLabels:
                  flatheadmill.github.io: step-renewer
              executeHookOnEvent: []
              group: certificates
        EOF
    else
        [[ -n "$STEP_RENEWER_UNSAFE_LOGGING" ]] && {
            cat "$BINDING_CONTEXT_PATH"
            print
        }
        process_binding_context "$BINDING_CONTEXT_PATH"
    fi
} "$@"
